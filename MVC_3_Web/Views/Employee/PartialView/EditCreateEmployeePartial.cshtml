@model EmployeeViewModel

@{
    var departments = new SelectList(ViewData["departments"] as IEnumerable<Department>, nameof(Department.Id), nameof(Department.Name));
}

<div class="my-3">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="my-3">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="my-3">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="my-3">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="my-3">
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="my-3">
    <label asp-for="Hiringdate" class="col-form-label"></label>
    <input asp-for="Hiringdate" type="date" class="form-control" />
    <span asp-validation-for="Hiringdate" class="text-danger"></span>
</div>

<div class="form-check my-3">
    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
    <label asp-for="IsActive" class="form-check-label"></label>
</div>

<div class="my-3">
    <label asp-for="WorkForId" class="col-form-label"></label>
    <select asp-for="WorkForId" asp-items="departments" class="form-control">
        <option value=""> -- Select Department -- </option>
    </select>
    <span asp-validation-for="WorkForId" class="text-danger"></span>
</div>

<div class="my-3">
    <label asp-for="Image" class="col-form-label"></label>
    <input asp-for="Image" type="file" class="form-control" />
</div>







