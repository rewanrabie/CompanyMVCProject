
@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
   // string S01 = ViewData["Message"] as string;  //Required Casting
    //string S02 = ViewBag.Hamada; // Not Required Casting
}

<h1>All Employee</h1>
<br/>
<br />
@*<div class=" alert alert-danger"> 
    <p>@ViewData["Message"]</p>
</div>
<div class="alert alert-warning"> 
    <p>@ViewBag.Hamada</p>
</div>*@

@if (!string.IsNullOrEmpty(@TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["Message"]</p>
    </div>
}

<form> 
    <div class="container m-4 ">
        <div class="row justify-content-center d-flex">
            <div class="col-6">
    <input type="text" id="id" name="InputSearch" class="form-control"/>
            </div>
            <div class="col-6">
    <input type="submit" value="Search" class="btn btn-success" />
        </div>
        </div>
    </div>
</form>


<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.ImageName)</th>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Hiringdate)</th>
                <th>@Html.DisplayNameFor(E => E.DateOfCreation)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.IsDelete)</th>
                <th>Department</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model){
                
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(employee.ImageName))
                        {
                            <img src="~/Files/Image/@employee.ImageName" width="75" class="rounded-circle" />
                        }
                        else
                        {
                            <span>No Image</span>
                        } 
                    </td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.WorkFor?.Name</td>
                    <td>@Html.DisplayFor(M => employee.Salary)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@Html.DisplayFor(M =>employee.Email)</td>
                    <td>@Html.DisplayFor(M => employee.IsActive)</td>
                    <td>@employee.Address</td>
                    <td>@employee.Hiringdate</td>
                    @if (employee.WorkFor is null)
                    {
                        <td>
                            No Department
                        </td>
                    }
                    else
                    {
                        <td>
                            @employee.WorkFor?.Name
                        </td>
                    }
                   
                    <partial name="_ButtomPartialView" model="@employee.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Employees :(</h4>
    </div>
}
