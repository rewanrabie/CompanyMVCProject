@model IEnumerable<RoleViewModel>

<h1>All Role</h1>
<br />
<br />

<form>
    <div class="container m-4 ">
        <div class="row justify-content-center d-flex">
            <div class="col-6">
            <input type="text" id="id" name="InputSearch" class="form-control" />
        </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />

            </div>
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.RoleName</td>             

                    <partial name="_ButtomPartialView" model="@item.Id" />
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-primary">
        <h4>There is No Roles :(</h4>
    </div>
}

